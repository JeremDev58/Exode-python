<BtnRound>:
    pos_hint: {'center_x': 0.5}
	size_hint: (1, .3)
	#background_color: (48/255,84/255,150/255,1)
	#background_normal: ''

<BtnRound@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (48/255,84/255,150/255,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [100]